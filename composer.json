{
    "name"        : "artur-gajewski/silex-skeleton",
    "type"        : "library",
    "description" : "Starting point for your Silex applications",
    "keywords"    : ["framework","silex","skeleton"],
    "homepage"    : "https://github.com/artur-gajewski/silex-skeleton",
    "license"     : "MIT",
    "authors"     : [
        {
            "name"  : "Artur Gajewski",
            "email" : "info@arturgajewski.com"
        }
    ],
    "config": {
        "vendor-dir": "silex/vendor"
    },
    "require": {
        "php"                           : ">=5.3.2",
        "silex/silex"                   : "1.0.*@dev",
        "symfony/yaml"                  : "~2.1",
        "symfony/twig-bridge"           : "v2.2.0",
        "symfony/translation"           : "~2.1",
        "monolog/monolog"               : "~1.0",
        "igorw/config-service-provider" : "v1.1.3"
    },
    "extra": {
        "chmod": {
            "silex/cache"   : "0770",
            "silex/log"     : "0770"
        }
    }
}
